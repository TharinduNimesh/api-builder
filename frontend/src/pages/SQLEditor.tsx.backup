import { useState, useEffect } from "react";
import { useNavigate } from "react-router-dom";
import { Button } from "@/components/ui/button";
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Textarea } from "@/components/ui/textarea";
import { Dialog, DialogContent, DialogDescription, DialogFooter, DialogHeader, DialogTitle } from "@/components/ui/dialog";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { ScrollArea } from "@/components/ui/scroll-area";
import { Play, Save, RotateCcw, CheckCircle, XCircle, Clock, Loader2, Copy, AlertCircle, ArrowRight, Trash2 } from "lucide-react";
import { Alert, AlertDescription } from "@/components/ui/alert";
import { TopBar } from "@/components/layout/TopBar";
import { 
  executeSQL, 
  getQueryHistory, 
  getSnippets, 
  saveSnippet, 
  deleteSnippet as deleteSnippetAPI,
  type QueryResult,
  type QueryHistory,
  type SqlSnippet 
} from "@/services/sql";
import { notifySuccess, notifyError } from "@/lib/notify";

const SQLEditor = () => {
  const navigate = useNavigate();
  const [sql, setSql] = useState("SELECT now();");
  const [executing, setExecuting] = useState(false);
  const [queryResult, setQueryResult] = useState<QueryResult | null>(null);
  const [history, setHistory] = useState<QueryHistory[]>([]);
  const [snippets, setSnippets] = useState<SqlSnippet[]>([]);
  const [loadingHistory, setLoadingHistory] = useState(true);
  const [loadingSnippets, setLoadingSnippets] = useState(true);
  
  // Save snippet modal
  const [saveModalOpen, setSaveModalOpen] = useState(false);
  const [snippetName, setSnippetName] = useState("");
  const [snippetDescription, setSnippetDescription] = useState("");
  const [saving, setSaving] = useState(false);

  useEffect(() => {
    loadHistory();
    loadSnippets();
  }, []);

  const loadHistory = async () => {
    try {
      setLoadingHistory(true);
      const data = await getQueryHistory(5);
      setHistory(data);
    } catch (err: any) {
      console.error('Failed to load history:', err);
    } finally {
      setLoadingHistory(false);
    }
  };

  const loadSnippets = async () => {
    try {
      setLoadingSnippets(true);
      const data = await getSnippets(5);
      setSnippets(data);
    } catch (err: any) {
      console.error('Failed to load snippets:', err);
    } finally {
      setLoadingSnippets(false);
    }
  };

  const handleExecute = async () => {
    if (!sql.trim()) {
      notifyError('Please enter a SQL query');
      return;
    }

    setExecuting(true);
    setQueryResult(null);
    
    try {
      const result = await executeSQL(sql);
      setQueryResult(result);
      
      if (result.status === 'success') {
        notifySuccess(result.message || 'Query executed successfully');
        loadHistory(); // Refresh history
      }
      
      if (result.warnings && result.warnings.length > 0) {
        result.warnings.forEach(warning => notifyError(warning));
      }
    } catch (err: any) {
      const errorResult: QueryResult = {
        status: 'error',
        message: err?.message || 'Failed to execute query'
      };
      setQueryResult(errorResult);
      notifyError(err?.message || 'Failed to execute query');
      loadHistory(); // Refresh history even on error
    } finally {
      setExecuting(false);
    }
  };

  const handleClear = () => {
    setSql("");
    setQueryResult(null);
  };

  const handleSaveSnippet = async () => {
    if (!snippetName.trim()) {
      notifyError('Please enter a snippet name');
      return;
    }
    if (!sql.trim()) {
      notifyError('Please enter SQL query');
      return;
    }

    setSaving(true);
    try {
      await saveSnippet(snippetName, sql, snippetDescription);
      notifySuccess('Snippet saved successfully');
      setSaveModalOpen(false);
      setSnippetName("");
      setSnippetDescription("");
      loadSnippets(); // Refresh snippets
    } catch (err: any) {
      notifyError(err?.message || 'Failed to save snippet');
    } finally {
      setSaving(false);
    }
  };

  const handleDeleteSnippet = async (id: string) => {
    if (!confirm('Are you sure you want to delete this snippet?')) return;
    
    try {
      await deleteSnippetAPI(id);
      notifySuccess('Snippet deleted');
      loadSnippets();
    } catch (err: any) {
      notifyError(err?.message || 'Failed to delete snippet');
    }
  };

  const loadSnippetToEditor = (query: string) => {
    setSql(query);
  };

  const copyResultsToClipboard = () => {
    if (!queryResult?.rows || queryResult.rows.length === 0) return;
    const text = JSON.stringify(queryResult.rows, null, 2);
    navigator.clipboard.writeText(text);
    notifySuccess('Results copied to clipboard');
  };

  const getStatusIcon = (status: string) => {
    switch (status) {
      case 'success':
        return <CheckCircle className="h-4 w-4 text-green-600" />;
      case 'error':
        return <XCircle className="h-4 w-4 text-destructive" />;
      case 'loading':
        return <Loader2 className="h-4 w-4 text-muted-foreground animate-spin" />;
      default:
        return null;
    }
  };

  const formatTimestamp = (timestamp: string) => {
    const date = new Date(timestamp);
    const now = new Date();
    const diff = now.getTime() - date.getTime();
    const minutes = Math.floor(diff / 60000);
    
    if (minutes < 1) return 'Just now';
    if (minutes < 60) return `${minutes}m ago`;
    const hours = Math.floor(minutes / 60);
    if (hours < 24) return `${hours}h ago`;
    const days = Math.floor(hours / 24);
    return `${days}d ago`;
  };

  return (
    <div className="flex-1 flex flex-col bg-background">
      <TopBar />
      
      <main className="flex-1 p-6">
        <div className="space-y-6">
          <div>
            <h1 className="text-3xl font-bold text-foreground">SQL Editor</h1>
            <p className="text-muted-foreground">
              Write and execute SQL queries against your database
            </p>
          </div>

          <div className="grid grid-cols-1 xl:grid-cols-4 gap-6">
            {/* SQL Editor */}
            <div className="xl:col-span-3 space-y-4">
              <Card>
                <CardHeader>
                  <div className="flex items-center justify-between">
                    <div>
                      <CardTitle>Query Editor</CardTitle>
                      <CardDescription>
                        Write your SQL queries below
                      </CardDescription>
                    </div>
                    <div className="flex gap-2">
                      <Button variant="outline" size="sm" onClick={handleClear}>
                        <RotateCcw className="h-4 w-4 mr-2" />
                        Clear
                      </Button>
                      <Button variant="outline" size="sm" onClick={() => setSaveModalOpen(true)}>
                        <Save className="h-4 w-4 mr-2" />
                        Save snippet
                      </Button>
                      <Button size="sm" onClick={handleExecute} disabled={executing}>
                        {executing ? (
                          <>
                            <Loader2 className="h-4 w-4 mr-2 animate-spin" />
                            Running...
                          </>
                        ) : (
                          <>
                            <Play className="h-4 w-4 mr-2" />
                            Run
                          </>
                        )}
                      </Button>
                    </div>
                  </div>
                </CardHeader>
                <CardContent>
                  <Textarea
                    value={sql}
                    onChange={(e) => setSql(e.target.value)}
                    placeholder="SELECT * FROM your_table LIMIT 10;"
                    className="min-h-[300px] font-mono text-sm"
                    style={{ 
                      fontFamily: 'monospace',
                      resize: 'vertical'
                    }}
                  />
                </CardContent>
              </Card>

              {/* Results */}
              <Card>
                <CardHeader>
                  <div className="flex items-center justify-between">
                    <div className="flex items-center gap-2">
                      <CardTitle>Results</CardTitle>
                      {queryResult?.status && (
                        <>
                          {getStatusIcon(queryResult.status)}
                          <Badge variant={queryResult.status === 'success' ? 'default' : 'destructive'}>
                            {queryResult.status}
                          </Badge>
                        </>
                      )}
                      {queryResult?.executionTime && (
                        <Badge variant="outline" className="text-xs">
                          {queryResult.executionTime.toFixed(2)}ms
                        </Badge>
                      )}
                      {queryResult?.rowsAffected !== undefined && (
                        <Badge variant="outline" className="text-xs">
                          {queryResult.rowsAffected} row{queryResult.rowsAffected !== 1 ? 's' : ''}
                        </Badge>
                      )}
                    </div>
                    {queryResult?.rows && queryResult.rows.length > 0 && (
                      <Button variant="ghost" size="sm" onClick={copyResultsToClipboard}>
                        <Copy className="h-4 w-4 mr-1" />
                        Copy JSON
                      </Button>
                    )}
                  </div>
                </CardHeader>
                <CardContent>
                  {executing ? (
                    <div className="flex flex-col items-center justify-center py-12">
                      <Loader2 className="h-8 w-8 animate-spin text-primary mb-3" />
                      <p className="text-sm text-muted-foreground">Executing query...</p>
                    </div>
                  ) : queryResult?.status === 'success' && queryResult.rows && queryResult.rows.length > 0 ? (
                    <div className="space-y-4">
                      <ScrollArea className="h-[400px] border rounded-lg">
                        <table className="w-full">
                          <thead className="sticky top-0 bg-muted">
                            <tr>
                              {Object.keys(queryResult.rows[0] || {}).map((key) => (
                                <th key={key} className="text-left p-3 font-semibold text-xs uppercase">
                                  {key}
                                </th>
                              ))}
                            </tr>
                          </thead>
                          <tbody>
                            {queryResult.rows.map((row, index) => (
                              <tr key={index} className="border-t hover:bg-muted/50">
                                {Object.values(row).map((value: any, colIndex) => (
                                  <td key={colIndex} className="p-3 text-sm font-mono">
                                    {value === null ? (
                                      <span className="text-muted-foreground italic">null</span>
                                    ) : (
                                      String(value)
                                    )}
                                  </td>
                                ))}
                              </tr>
                            ))}
                          </tbody>
                        </table>
                      </ScrollArea>
                    </div>
                  ) : queryResult?.status === 'success' ? (
                    <div className="flex flex-col items-center justify-center py-12">
                      <CheckCircle className="h-8 w-8 text-green-600 mb-3" />
                      <p className="text-sm font-medium">{queryResult.message}</p>
                    </div>
                  ) : queryResult?.status === 'error' ? (
                    <Alert variant="destructive">
                      <XCircle className="h-4 w-4" />
                      <AlertDescription>{queryResult.message}</AlertDescription>
                    </Alert>
                  ) : (
                    <div className="text-center p-8 text-muted-foreground">
                      Run a query to see results here
                    </div>
                  )}
                </CardContent>
              </Card>
            </div>

            {/* Sidebar */}
            <div className="xl:col-span-1 space-y-4">
              {/* Query History */}
              <Card>
                <CardHeader>
                  <div className="flex items-center justify-between">
                    <CardTitle className="text-base">Query History</CardTitle>
                    <Button variant="ghost" size="sm" onClick={() => navigate('/sql/history')}>
                      <ArrowRight className="h-4 w-4" />
                    </Button>
                  </div>
                  <CardDescription className="text-xs">
                    Recent queries (last 5)
                  </CardDescription>
                </CardHeader>
                <CardContent>
                                    </CardDescription>
                </CardHeader>
                <CardContent>
                  {loadingHistory ? (
                    <div className="flex items-center justify-center py-4">
                      <Loader2 className="h-5 w-5 animate-spin text-muted-foreground" />
                    </div>
                  ) : history.length === 0 ? (
                    <p className="text-sm text-muted-foreground text-center py-4">No history yet</p>
                  ) : (
                    <div className="space-y-2">
                      {history.map((item) => (
                        <div 
                          key={item.id}
                          className="p-2 border rounded-md hover:bg-accent/50 cursor-pointer transition-colors text-xs"
                          onClick={() => loadSnippetToEditor(item.query)}
                        >
                          <div className="flex items-start justify-between mb-1">
                            {getStatusIcon(item.status)}
                            <span className="text-xs text-muted-foreground">
                              {formatTimestamp(item.createdAt)}
                            </span>
                          </div>
                          <code className="text-xs line-clamp-2 font-mono block">
                            {item.query}
                          </code>
                          {item.rowsAffected !== undefined && item.rowsAffected > 0 && (
                            <p className="text-xs text-muted-foreground mt-1">
                              {item.rowsAffected} rows
                            </p>
                          )}
                        </div>
                      ))}
                    </div>
                  )}
                </CardContent>
              </Card>

              {/* Saved Snippets */}
              <Card>
                <CardHeader>
                  <div className="flex items-center justify-between">
                    <CardTitle className="text-base">Saved Snippets</CardTitle>
                    <Button variant="ghost" size="sm" onClick={() => navigate('/sql/snippets')}>
                      <ArrowRight className="h-4 w-4" />
                    </Button>
                  </div>
                  <CardDescription className="text-xs">
                    Your saved queries (last 5)
                  </CardDescription>
                </CardHeader>
                <CardContent>
                  {loadingSnippets ? (
                    <div className="flex items-center justify-center py-4">
                      <Loader2 className="h-5 w-5 animate-spin text-muted-foreground" />
                    </div>
                  ) : snippets.length === 0 ? (
                    <p className="text-sm text-muted-foreground text-center py-4">No snippets yet</p>
                  ) : (
                    <div className="space-y-2">
                      {snippets.map((snippet) => (
                        <div 
                          key={snippet.id}
                          className="p-2 border rounded-md hover:bg-accent/50 transition-colors text-xs group"
                        >
                          <div className="flex items-start justify-between mb-1">
                            <span className="font-semibold text-xs truncate flex-1 cursor-pointer" onClick={() => loadSnippetToEditor(snippet.query)}>
                              {snippet.name}
                            </span>
                            <Button 
                              variant="ghost" 
                              size="sm" 
                              className="h-5 w-5 p-0 opacity-0 group-hover:opacity-100"
                              onClick={() => handleDeleteSnippet(snippet.id)}
                            >
                              <Trash2 className="h-3 w-3" />
                            </Button>
                          </div>
                          {snippet.description && (
                            <p className="text-xs text-muted-foreground mb-1 line-clamp-1">
                              {snippet.description}
                            </p>
                          )}
                          <code className="text-xs line-clamp-2 font-mono block cursor-pointer" onClick={() => loadSnippetToEditor(snippet.query)}>
                            {snippet.query}
                          </code>
                        </div>
                      ))}
                    </div>
                  )}
                </CardContent>
              </Card>
            </div>
          </div>
        </div>
      </main>

      {/* Save Snippet Modal */}
      <Dialog open={saveModalOpen} onOpenChange={setSaveModalOpen}>
        <DialogContent>
          <DialogHeader>
            <DialogTitle>Save SQL Snippet</DialogTitle>
            <DialogDescription>
              Save this query for later use
            </DialogDescription>
          </DialogHeader>
          <div className="space-y-4 py-4">
            <div className="space-y-2">
              <Label htmlFor="name">Name *</Label>
              <Input
                id="name"
                placeholder="My useful query"
                value={snippetName}
                onChange={(e) => setSnippetName(e.target.value)}
              />
            </div>
            <div className="space-y-2">
              <Label htmlFor="description">Description</Label>
              <Textarea
                id="description"
                placeholder="What does this query do?"
                value={snippetDescription}
                onChange={(e) => setSnippetDescription(e.target.value)}
                rows={3}
              />
            </div>
            <div className="space-y-2">
              <Label>Query Preview</Label>
              <code className="block text-xs bg-muted p-3 rounded font-mono max-h-32 overflow-auto">
                {sql}
              </code>
            </div>
          </div>
          <DialogFooter>
            <Button variant="outline" onClick={() => setSaveModalOpen(false)}>
              Cancel
            </Button>
            <Button onClick={handleSaveSnippet} disabled={saving}>
              {saving ? (
                <>
                  <Loader2 className="mr-2 h-4 w-4 animate-spin" />
                  Saving...
                </>
              ) : (
                <>
                  <Save className="mr-2 h-4 w-4" />
                  Save Snippet
                </>
              )}
            </Button>
          </DialogFooter>
        </DialogContent>
      </Dialog>
    </div>
  );
};

export default SQLEditor;

                </CardContent>
              </Card>
            </div>
          </div>
        </div>
      </main>
    </div>
  );
};

export default SQLEditor;