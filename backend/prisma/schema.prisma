generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SysUser {
  id         String   @id @default(cuid())
  first_name String
  last_name  String
  email      String   @unique
  password   String
  is_active  Boolean  @default(false)
  createdAt  DateTime @default(now())
  refreshTokens SysRefreshToken[]
  projects   SysProject[]
  tablesCreated SysTable[] @relation("SysTableCreatedBy")
  tablesUpdated SysTable[] @relation("SysTableUpdatedBy")
}

model SysRefreshToken {
  id         String   @id @default(cuid())
  token      String   @unique
  userId     String
  user       SysUser  @relation(fields: [userId], references: [id], onDelete: Cascade)
  revoked    Boolean  @default(false)
  createdAt  DateTime @default(now())
  expiresAt  DateTime?
  @@index([userId])
}

model SysProject {
  id          String   @id @default(cuid())
  name        String
  createdById String
  createdBy   SysUser  @relation(fields: [createdById], references: [id], onDelete: Cascade)
  enable_roles Boolean @default(false)
  roles       Json?    // array of { name, description }
  is_protected Boolean @default(false)
  api_key     String?  @unique
  createdAt   DateTime @default(now())
  @@index([createdById])
}

model SysTable {
  id          String   @id @default(cuid())
  full_name   String   @unique // schema.name
  schema      String   @default("public")
  name        String
  columns     Json?
  createdById String
  createdBy   SysUser  @relation("SysTableCreatedBy", fields: [createdById], references: [id], onDelete: Cascade)
  updatedById String?
  updatedBy   SysUser? @relation("SysTableUpdatedBy", fields: [updatedById], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  @@index([createdById])
  @@index([updatedById])
}
